<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/lightgreen"
                android:endColor="@color/white"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/lightgreen" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="20dp"
                android:top="30dp"
                android:right="20dp"
                android:bottom="30dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/shadowgreen"
                android:startColor="@color/white"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/lightgreen" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="20dp"
                android:top="30dp"
                android:right="20dp"
                android:bottom="30dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/lightgreen"
                android:startColor="@color/white"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/lightgreen" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="20dp"
                android:top="30dp"
                android:right="20dp"
                android:bottom="30dp" />
        </shape>
    </item>
</selector>