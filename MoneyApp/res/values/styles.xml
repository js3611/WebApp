<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="OwingAmount">
        <item name="android:textColor">@color/red</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/table_border</item>
        <item name="android:layout_width">@dimen/column_width</item>
        <item name="android:layout_height">@dimen/column_height</item>
    </style>

    <style name="OwedAmount">
        <item name="android:textColor">@color/green</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/table_border</item>
        <item name="android:layout_width">@dimen/column_width</item>
        <item name="android:layout_height">@dimen/column_height</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="buttonBarStyle">@style/ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />
    
    <style name="SettingsHeader">
        <item name="android:paddingLeft">@dimen/marginRL</item>
        <item name="android:paddingRight">@dimen/marginRL</item>
        <item name="android:paddingTop">@dimen/marginTB</item>
        <item name="android:paddingBottom">@dimen/marginTB</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="SettingsChoice">
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">@dimen/marginTB</item>
        <item name="android:paddingBottom">@dimen/marginTB</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
